<?xml version='1.0' encoding='utf-8' standalone='no'?>
<qnx xmlns="http://www.qnx.com/schemas/application/1.0">
    <id>org.dyndns.smeagle.qterm</id>
    <filename>qterm</filename>
    <name>Command shell</name>
    <versionNumber>1.0.2</versionNumber>
    <description>BB10 terminal</description>
    <initialWindow>
        <systemChrome>none</systemChrome>
        <transparent>false</transparent>
        <autoOrients>true</autoOrients>
        <aspectRatio>landscape</aspectRatio>
    </initialWindow>
    <author>Aaron Small</author>
    <authorId>gYAAgNWv6u7pboCe5pzDHD7DuQM</authorId>
    <env var="QML_IMPORT_PATH" value="app/native/imports"/>
    <env var="QT_PLUGIN_PATH" value="app/native/plugins:/usr/lib/qt4/plugins"/>
    <env var="LD_LIBRARY_PATH" value="app/native/lib:/usr/lib/qt4/lib/"/>
    <asset entry="true" type="Qnx/Elf" path="qterm/qterm">qterm</asset>
    <asset path="lib">lib</asset>
    <action system="true">run_native</action>
    <action>access_shared</action>
    <icon>
        <image>%SRC_DIR%/icon.png</image>
    </icon>
    <splashscreen>
        <image>%SRC_DIR%/splashscreen.png</image>
    </splashscreen>
</qnx>
